# Document Q&A Engine Configuration

# OpenAI API (for embeddings and LLM)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-3.5-turbo

# Hugging Face (alternative embeddings)
HF_TOKEN=your_huggingface_token_here

# Database Configuration
DATABASE_URL=sqlite:///./docqa.db
REDIS_URL=redis://localhost:6379

# Vector Database
VECTOR_DB_TYPE=faiss  # Options: faiss, chroma, elasticsearch
VECTOR_DB_PATH=./vector_store
INDEX_DIMENSION=1536

# Application Settings
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,txt,docx
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_QUERY=5

# Search & Ranking
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RERANK_MODEL=ms-marco-MiniLM-L-6-v2
SEARCH_TOP_K=20
RERANK_TOP_K=5

# Performance Settings
BATCH_SIZE=32
INDEX_REFRESH_INTERVAL=300  # seconds
CACHE_TTL=3600  # seconds

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
WEB_PORT=8501
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30